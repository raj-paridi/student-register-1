#include<stdio.h>
#include<iostream.h>
#include<conio.h>
class complex{
public:
float rp,ip;
void read()
{
cout<<"enter real and imaginary parts of number";
cin>>rp>>ip;
}
void write(complex c)
{
cout<<"the complex no. is"<<" "<<c.rp<<"+i"<<c.ip<<endl;
}
void add(complex c1,complex c2)
{
complex c3;
c3.rp=c1.rp+c2.rp;
c3.ip=c1.ip+c2.ip;
cout<<"after addition"<<endl;
write(c3);
}
void sub(complex c1,complex c2)

{
complex c3;
c3.rp=c1.rp+c2.rp;
c3.ip=c1.ip+c2.ip;
cout<<"after addition"<<endl;
write(c3);
}
void mul(complex c1,complex c2)
{
complex c3;
c3.rp=(c1.rp*c2.rp)-(c1.ip*c2.ip);
c3.ip=(c1.rp*c2.ip)-(c1.ip*c2.rp);
cout<<"after multiplication"<<endl;
write(c3);
}
void div(complex c1,complex c2)
{
complex c3;
c3.rp=(c1.rp*c2.rp)-(c1.ip*c2.ip);
c3.ip=(c1.rp*c2.ip)-(c1.ip*c2.rp);
cout<<"after multiplication"<<endl;
write(c3);
}

